<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/mmDonutImage"
        android:layout_width="246dp"
        android:layout_height="217dp"
        android:layout_marginStart="82dp"
        android:layout_marginLeft="82dp"
        android:layout_marginTop="40dp"
        android:background="#00FFFFFF"
        android:scaleX="2.4"
        android:scaleY="2"
        android:translationX="3.5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/pinkdonuts_foreground" />

    <ImageButton
        android:id="@+id/mmCoffeeImage"
        android:layout_width="251dp"
        android:layout_height="219dp"
        android:layout_marginStart="82dp"
        android:layout_marginLeft="82dp"
        android:layout_marginTop="296dp"
        android:background="#00FFFFFF"
        android:scaleX="2.5"
        android:scaleY="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/mmcoffee_foreground" />

    <ImageButton
        android:id="@+id/mmOrderImage"
        android:layout_width="118dp"
        android:layout_height="100dp"
        android:layout_marginStart="82dp"
        android:layout_marginLeft="82dp"
        android:layout_marginTop="573dp"
        android:background="#00FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/shoppingcart_foreground" />

    <ImageButton
        android:id="@+id/mmStoreOrderImage"
        android:layout_width="118dp"
        android:layout_height="105dp"
        android:layout_marginStart="215dp"
        android:layout_marginLeft="215dp"
        android:layout_marginTop="573dp"
        android:background="#00FFFFFF"
        android:scaleX=".75"
        android:scaleY=".75"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/storeorders_foreground" />

</androidx.constraintlayout.widget.ConstraintLayout>