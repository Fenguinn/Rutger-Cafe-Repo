<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrderingDonuts">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="370dp"
        android:layout_height="227dp"
        android:scaleX="1.5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@mipmap/orderDonutImage"
        tools:layout_editor_absoluteY="68dp" />

    <Spinner
        android:id="@+id/flavorSpinner"
        android:layout_width="130"
        android:layout_height="wrap_content"
        android:entries="@array/donutFlavorArray"
        android:scaleX="1.5"
        android:scaleY="1.5"
        android:translationX="75"
        tools:layout_editor_absoluteX="-25dp"
        tools:layout_editor_absoluteY="504dp" />

    <Spinner
        android:id="@+id/spinner3"
        android:layout_width="75"
        android:layout_height="wrap_content"
        android:entries="@array/numDonutArray"
        android:translationX="135"
        tools:layout_editor_absoluteX="136dp"
        tools:layout_editor_absoluteY="507dp" />
</androidx.constraintlayout.widget.ConstraintLayout>